		margin-bottom 1em
		padding-left 115px
		clearfix()

		label
			margin-left -115px
		
		p
			font-size 1.2em

	#upload-placeholder
		border 2px dashed #FF9933
		color #999
		display block
		font-size 18px !important
		padding 45px
		text-align center
		width 270px
		border-radius()
	
	#upload-file-container
		input
			float none
	
	.help
		background url(images/icon_help.png) no-repeat
		cursor pointer
		display inline-block
		height 18px
		margin 5px 0 0 10px
		position relative
		overflow hidden
		width 18px

		&:hover
			overflow visible
			.popup
				left -15px
				bottom 25px
				opacity 1
	
		.popup
			background #FF9933
			bottom -9999px
			color #fff
			cursor default
			font-style italic
			font-size 0.9em
			left -9999px
			opacity 0
			padding 5px
			position absolute
			width 125px
			border-radius()
			transition()
			transition-property( opacity )
	
	p.buttons
		background url(images/bg_shadow.png) no-repeat center top
		margin 25px 0 0
		padding 40px 0 0
		text-align center

		button
			height 45px
			font-size 24px
			padding 0 25px 0 15px

			@extends .icon-photo
			&:before
				margin-right 0.5em


